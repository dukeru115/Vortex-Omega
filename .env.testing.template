# Vortex-Omega Testing Environment Template
# Neural Field Control System v2.5.0
# Copy to .env.testing and configure for your testing environment

# Application Settings
ENVIRONMENT=testing
NFCS_VERSION=2.5.0-test
NFCS_ENV=testing
DEBUG=true

# Database Configuration (In-memory for testing)
DATABASE_URL=sqlite:///:memory:
DATABASE_ECHO=false

# Redis Configuration (Local test instance)
REDIS_URL=redis://localhost:6379/2

# Security (Test keys - NEVER USE IN PRODUCTION)
SECRET_KEY=test-secret-key-for-testing-only
JWT_SECRET_KEY=test-jwt-secret-for-testing-only

# SSL/TLS Configuration
SSL_DISABLE=true

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=human
LOG_OUTPUT=console
LOG_FILE_PATH=./logs/vortex_test.log

# Performance Configuration
WORKERS=1
RELOAD=false
WORKER_CLASS=sync

# NFCS Specific Settings (Fast testing)
ORCHESTRATOR_FREQUENCY=2.0
OPERATIONAL_MODE=manual
SAFETY_LEVEL=0.9
MAX_CONCURRENT_OPERATIONS=5

# Constitutional Monitoring (Accelerated testing)
CONSTITUTIONAL_MONITORING_ENABLED=true
CONSTITUTIONAL_DEBUG=true
CONSTITUTIONAL_FAST_MODE=true

# ESC-Kuramoto Configuration (Minimal for testing)
KURAMOTO_OSCILLATORS=4
KURAMOTO_COUPLING_STRENGTH=0.2

# Monitoring & Metrics (Disabled for testing)
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false
METRICS_COLLECTION_INTERVAL=300

# Testing Features
TESTING_MODE=true
MOCK_EXTERNAL_SERVICES=true
SKIP_SLOW_TESTS=false
TEST_TIMEOUT=30

# API Configuration (Relaxed for testing)
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=60
CORS_ORIGINS=*